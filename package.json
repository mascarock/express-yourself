{
  "name": "express-yourself",
  "version": "1.0.0",
  "description": "This repository houses the backend API built with Node.js and Express. It serves as the powerhouse for the frontend, providing data through RESTful endpoints, and integrating external API consumption to deliver dynamic content.",
  "main": "server.js",
  "scripts": {
    "lint": "standard",
    "test": "mocha tests/**/*.mocha.test.js",
    "coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/.*\\.mocha\\.test\\.js"
    ]
  },
  "devDependencies": {
    "chai-http": "^4.4.0",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2",
    "standard": "^17.1.2",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "axios": "^1.2.3",
    "chai": "^4.5.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
